@model DogGo.Models.ViewModels.WalkerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Walker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Walker.Name" class="control-label"></label>
                <input asp-for="Walker.Name" class="form-control" />
                <span asp-validation-for="Walker.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Walker.NeighborhoodId" class="control-label"></label>
                <select asp-for="Walker.NeighborhoodId" class="form-control">
                    <option value="">Select Neighborhood</option>
                    @foreach (Neighborhood neighborhood in Model.Neighborhoods)
                    {
                        <option value="@neighborhood.Id">@neighborhood.Name</option>
                    }
                </select>
                <span asp-validation-for="Walker.NeighborhoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Walker.ImageUrl" class="control-label"></label>
                <input asp-for="Walker.ImageUrl" class="form-control" />
                <span asp-validation-for="Walker.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
