@model IEnumerable<DogGo.Models.Walks>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="DeleteMultiple">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Select
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Walker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dog)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dog.Owner)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="checkbox" name="@item.Id" value="@item.Id"/>
                        </div>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Walker.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dog.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dog.Owner.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Delete Selected" class="btn btn-primary" />
    </div>
</form>
